{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": ["vite/client", "vite-plugin-svgr/client", "jest", "vitest"]
    },
    "include": [
        "src",
        "src/*",
        "index.d.ts",
        "tailwind.config.js",
        "postcss.config.js",
        "lint-staged.js",
        ".eslintrc.cjs",
        "src/service-worker.ts",
        "src/setupTests.ts",
        "src/setupTests.js",
        "src/serviceWorkerRegistration.ts"
    ],
    "exclude": [
        "cypress",
        "cypress/*/**.cy.ts",
        "cypress/*/**.cy.js",
        "cypress/*/**.js",
        "cypress/*/**.ts",
        "cypress.config.ts"
    ]
}
